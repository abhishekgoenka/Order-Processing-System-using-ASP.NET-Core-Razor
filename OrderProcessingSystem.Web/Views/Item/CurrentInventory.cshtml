@model IList<OrderProcessingSystem.Models.Item>


<!-- Begin Page Wrapper -->
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Inventory List<br />
                <small>We are happy to extend our business by adding new item to our inventory</small>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (var index = 1; index <= Model.Count(); index++)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@Model[index - 1].Name</td>
                            <td>@Model[index - 1].Description</td>
                            <td>@Model[index - 1].Qty</td>
                            <td>
                                @Html.ActionLink("Update Inventory", "UpdateInventory", new {Model[index - 1].Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>