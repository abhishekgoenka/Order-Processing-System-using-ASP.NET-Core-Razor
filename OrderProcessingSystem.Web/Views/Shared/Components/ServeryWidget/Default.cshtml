@model List<OrderProcessingSystem.Models.ItemServeryViewModel>
@inject IHtmlLocalizer<HomeController> localizer
@using Microsoft.AspNetCore.Mvc.Localization
@using OrderProcessingSystem.Web.Controllers
<div class="panel panel-primary widget">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3">
                <i class="fa fa-comments fa-3x"></i>
            </div>
            <div class="col-xs-9 text-right">
                <h3>@localizer["CoolestProduct"]</h3>
            </div>
        </div>
    </div>
    <div class="widget-display">
        <table class="table table-fluid table-striped">
            <thead>
                <tr>
                    <th>@localizer["Product"]</th>
                    <th>@localizer["AddVote"]</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a href="#" class="vote-up" data-userid="@item.Id">Vote Up</a></td>
                </tr>

            }
            
            </tbody>
        </table>
    </div>
</div>